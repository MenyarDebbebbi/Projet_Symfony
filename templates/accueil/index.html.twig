{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900">Tableau de bord</h1>
        <p class="mt-2 text-lg text-gray-600">Bienvenue dans votre système de gestion</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <div class="bg-white overflow-hidden shadow-lg rounded-lg hover:shadow-xl transition transform hover:-translate-y-1">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase">Livres</p>
                        <p class="mt-2 text-3xl font-bold text-indigo-600">{{ stats.livres }}</p>
                    </div>
                    <div class="p-3 bg-indigo-100 rounded-full">
                        <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="{{ path('app_livre_index') }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-800 transition">
                        Voir tous les livres →
                    </a>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow-lg rounded-lg hover:shadow-xl transition transform hover:-translate-y-1">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase">Auteurs</p>
                        <p class="mt-2 text-3xl font-bold text-green-600">{{ stats.auteurs }}</p>
                    </div>
                    <div class="p-3 bg-green-100 rounded-full">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="{{ path('app_auteur_index') }}" class="text-sm font-medium text-green-600 hover:text-green-800 transition">
                        Voir tous les auteurs →
                    </a>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow-lg rounded-lg hover:shadow-xl transition transform hover:-translate-y-1">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase">Catégories</p>
                        <p class="mt-2 text-3xl font-bold text-purple-600">{{ stats.categories }}</p>
                    </div>
                    <div class="p-3 bg-purple-100 rounded-full">
                        <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                        </svg>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="{{ path('app_categorie_index') }}" class="text-sm font-medium text-purple-600 hover:text-purple-800 transition">
                        Voir toutes les catégories →
                    </a>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow-lg rounded-lg hover:shadow-xl transition transform hover:-translate-y-1">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase">Éditeurs</p>
                        <p class="mt-2 text-3xl font-bold text-yellow-600">{{ stats.editeurs }}</p>
                    </div>
                    <div class="p-3 bg-yellow-100 rounded-full">
                        <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="{{ path('app_editeur_index') }}" class="text-sm font-medium text-yellow-600 hover:text-yellow-800 transition">
                        Voir tous les éditeurs →
                    </a>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow-lg rounded-lg hover:shadow-xl transition transform hover:-translate-y-1">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 uppercase">Ouvriers</p>
                        <p class="mt-2 text-3xl font-bold text-blue-600">{{ stats.ouvriers }}</p>
                    </div>
                    <div class="p-3 bg-blue-100 rounded-full">
                        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="{{ path('app_ouvrier_index') }}" class="text-sm font-medium text-blue-600 hover:text-blue-800 transition">
                        Voir tous les ouvriers →
                    </a>
                </div>
            </div>
        </div>
    </div>

    {% if recentLivres|length > 0 %}
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-indigo-500 to-indigo-600">
            <h2 class="text-xl font-bold text-white">Livres récents</h2>
            <p class="text-indigo-100 text-sm">Les 5 derniers livres ajoutés</p>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Titre</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ISBN</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantité</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priorité</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date pub.</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for livre in recentLivres %}
                    <tr class="hover:bg-gray-50 transition">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">{{ livre.titre }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">{{ livre.isbn ?? '-' }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">{{ livre.qte }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                {% if livre.priorite == 'Haute' %}
                                    bg-red-100 text-red-800
                                {% elseif livre.priorite == 'Moyenne' %}
                                    bg-yellow-100 text-yellow-800
                                {% else %}
                                    bg-green-100 text-green-800
                                {% endif %}">
                                {{ livre.priorite }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ livre.datepub|date('d/m/Y') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="{{ path('app_livre_show', {'id': livre.id}) }}" 
                               class="text-indigo-600 hover:text-indigo-900 transition">
                                Voir
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
            <a href="{{ path('app_livre_index') }}" 
               class="text-sm font-medium text-indigo-600 hover:text-indigo-800 transition">
                Voir tous les livres →
            </a>
        </div>
    </div>
    {% endif %}

    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-gradient-to-br from-indigo-500 to-indigo-700 rounded-lg p-6 text-white shadow-lg">
            <h3 class="text-xl font-bold mb-2">Actions rapides</h3>
            <p class="text-indigo-100 mb-4 text-sm">Créez rapidement de nouvelles entrées</p>
            <div class="space-y-2">
                <a href="{{ path('app_livre_new') }}" 
                   class="block bg-white bg-opacity-20 hover:bg-opacity-30 rounded-md px-4 py-2 transition text-sm font-medium">
                    + Nouveau livre
                </a>
                <a href="{{ path('app_auteur_new') }}" 
                   class="block bg-white bg-opacity-20 hover:bg-opacity-30 rounded-md px-4 py-2 transition text-sm font-medium">
                    + Nouvel auteur
                </a>
                <a href="{{ path('app_editeur_new') }}" 
                   class="block bg-white bg-opacity-20 hover:bg-opacity-30 rounded-md px-4 py-2 transition text-sm font-medium">
                    + Nouvel éditeur
                </a>
            </div>
        </div>

        <div class="bg-gradient-to-br from-purple-500 to-purple-700 rounded-lg p-6 text-white shadow-lg">
            <h3 class="text-xl font-bold mb-2">Navigation</h3>
            <p class="text-purple-100 mb-4 text-sm">Accédez rapidement aux différentes sections</p>
            <div class="grid grid-cols-2 gap-2">
                <a href="{{ path('app_livre_index') }}" 
                   class="block bg-white bg-opacity-20 hover:bg-opacity-30 rounded-md px-3 py-2 transition text-sm font-medium text-center">
                    Livres
                </a>
                <a href="{{ path('app_auteur_index') }}" 
                   class="block bg-white bg-opacity-20 hover:bg-opacity-30 rounded-md px-3 py-2 transition text-sm font-medium text-center">
                    Auteurs
                </a>
                <a href="{{ path('app_categorie_index') }}" 
                   class="block bg-white bg-opacity-20 hover:bg-opacity-30 rounded-md px-3 py-2 transition text-sm font-medium text-center">
                    Catégories
                </a>
                <a href="{{ path('app_editeur_index') }}" 
                   class="block bg-white bg-opacity-20 hover:bg-opacity-30 rounded-md px-3 py-2 transition text-sm font-medium text-center">
                    Éditeurs
                </a>
                <a href="{{ path('app_ouvrier_index') }}" 
                   class="block bg-white bg-opacity-20 hover:bg-opacity-30 rounded-md px-3 py-2 transition text-sm font-medium text-center col-span-2">
                    Ouvriers
                </a>
            </div>
        </div>
    </div>
{% endblock %}
