{% extends 'admin_base.html.twig' %}

{% block title %}Ma Bibliothèque{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Ma Bibliothèque</h1>
    
    {% if bibliotheque %}
    <div class="bg-white shadow rounded-lg p-6">
        <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div>
                <dt class="text-sm font-medium text-gray-500">Nom</dt>
                <dd class="mt-1 text-sm text-gray-900">{{ bibliotheque.nom }}</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Ville</dt>
                <dd class="mt-1 text-sm text-gray-900">{{ bibliotheque.ville }}</dd>
            </div>
            <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500">Adresse</dt>
                <dd class="mt-1 text-sm text-gray-900">{{ bibliotheque.adresse }}</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Téléphone</dt>
                <dd class="mt-1 text-sm text-gray-900">{{ bibliotheque.telephone ?? '-' }}</dd>
            </div>
        </dl>
    </div>
    {% else %}
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
        <p class="text-yellow-800">Aucune bibliothèque assignée. Contactez un super administrateur.</p>
    </div>
    {% endif %}
</div>
{% endblock %}

