{% extends 'admin_base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}
<div class="space-y-6">
    <div class="bg-white shadow rounded-lg p-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Dashboard Admin</h1>
        {% if bibliotheque %}
            <p class="text-gray-600 mb-6">Bibliothèque: <span class="font-semibold">{{ bibliotheque.nom }}</span></p>
        {% else %}
            <p class="text-yellow-600 mb-6">⚠️ Aucune bibliothèque assignée</p>
        {% endif %}
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-blue-50 p-6 rounded-lg border border-blue-200">
                <p class="text-sm font-medium text-blue-600">Total Livres</p>
                <p class="text-3xl font-bold text-blue-900 mt-2">{{ totalLivres }}</p>
            </div>
            
            <div class="bg-green-50 p-6 rounded-lg border border-green-200">
                <p class="text-sm font-medium text-green-600">Total Auteurs</p>
                <p class="text-3xl font-bold text-green-900 mt-2">{{ totalAuteurs }}</p>
            </div>
            
            <div class="bg-purple-50 p-6 rounded-lg border border-purple-200">
                <p class="text-sm font-medium text-purple-600">Total Catégories</p>
                <p class="text-3xl font-bold text-purple-900 mt-2">{{ totalCategories }}</p>
            </div>
            
            <div class="bg-orange-50 p-6 rounded-lg border border-orange-200">
                <p class="text-sm font-medium text-orange-600">Total Éditeurs</p>
                <p class="text-3xl font-bold text-orange-900 mt-2">{{ totalEditeurs }}</p>
            </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <a href="{{ path('admin_bibliotheque') }}" class="block bg-white border-2 border-gray-200 rounded-lg p-6 hover:border-indigo-500 transition">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Ma Bibliothèque</h3>
                <p class="text-gray-600">Voir les informations de ma bibliothèque</p>
            </a>
            
            <a href="{{ path('admin_livres') }}" class="block bg-white border-2 border-gray-200 rounded-lg p-6 hover:border-indigo-500 transition">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Gérer les Livres</h3>
                <p class="text-gray-600">Créer et gérer les livres</p>
            </a>
            
            <a href="{{ path('admin_auteurs') }}" class="block bg-white border-2 border-gray-200 rounded-lg p-6 hover:border-indigo-500 transition">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Gérer les Auteurs</h3>
                <p class="text-gray-600">Créer et gérer les auteurs</p>
            </a>
            
            <a href="{{ path('admin_categories') }}" class="block bg-white border-2 border-gray-200 rounded-lg p-6 hover:border-indigo-500 transition">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Gérer les Catégories</h3>
                <p class="text-gray-600">Créer et gérer les catégories</p>
            </a>
            
            <a href="{{ path('admin_editeurs') }}" class="block bg-white border-2 border-gray-200 rounded-lg p-6 hover:border-indigo-500 transition">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Gérer les Éditeurs</h3>
                <p class="text-gray-600">Créer et gérer les éditeurs</p>
            </a>
        </div>
    </div>
</div>
{% endblock %}

