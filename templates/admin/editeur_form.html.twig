{% extends 'admin_base.html.twig' %}

{% block title %}{{ editeur.id ? 'Modifier' : 'Nouvel' }} Éditeur{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">{{ editeur.id ? 'Modifier' : 'Nouvel' }} Éditeur</h1>
    
    <div class="bg-white shadow rounded-lg p-6">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="flex justify-end space-x-4 mt-6">
            <a href="{{ path('admin_editeurs') }}" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">Annuler</a>
            <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">Enregistrer</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

