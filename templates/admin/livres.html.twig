{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des Livres{% endblock %}

{% block body %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <h1 class="text-3xl font-bold text-gray-900">Gestion des Livres</h1>
        <a href="{{ path('admin_livre_new') }}" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition">
            Nouveau Livre
        </a>
    </div>
    
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Titre</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Auteur</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Quantité</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Priorité</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for livre in livres %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ livre.id }}</td>
                    <td class="px-6 py-4 text-sm font-medium text-gray-900">{{ livre.titre }}</td>
                    <td class="px-6 py-4 text-sm text-gray-500">{{ livre.auteur ? livre.auteur.nom ~ ' ' ~ livre.auteur.prenom : '-' }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ livre.qte }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 py-1 text-xs rounded-full {% if livre.priorite == 'Haute' %}bg-red-100 text-red-800{% elseif livre.priorite == 'Moyenne' %}bg-yellow-100 text-yellow-800{% else %}bg-green-100 text-green-800{% endif %}">
                            {{ livre.priorite }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{{ path('admin_livre_edit', {id: livre.id}) }}" class="text-indigo-600 hover:text-indigo-900 mr-4">Modifier</a>
                        <form method="post" action="{{ path('admin_livre_delete', {id: livre.id}) }}" class="inline" onsubmit="return confirm('Êtes-vous sûr ?');">
                            <button type="submit" class="text-red-600 hover:text-red-900">Supprimer</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

