{% extends '_layouts/index_layout.html.twig' %}
{% import '_components/ui_components.html.twig' as ui %}

{% block index_title %}Liste des Auteurs{% endblock %}
{% block page_heading %}Liste des Auteurs{% endblock %}
{% block page_subheading %}Gérez tous vos auteurs en un seul endroit{% endblock %}

{% block search_title %}Rechercher un auteur{% endblock %}

{% block search_form %}
    <form method="get" action="{{ path('app_auteur_index') }}" class="flex flex-col md:flex-row gap-4">
        <div class="flex-1">
            <label for="search" class="sr-only">Recherche</label>
            {{ ui.search_input('search', searchTerm, 'Rechercher par nom ou prénom...') }}
        </div>
        <div class="w-full md:w-48">
            <label for="type" class="sr-only">Type de recherche</label>
            {{ ui.search_select('type', {
                'all': 'Tous les champs',
                'nom': 'Nom uniquement',
                'prenom': 'Prénom uniquement'
            }, searchType) }}
        </div>
        <div class="flex gap-2">
            {{ ui.search_button() }}
            {% if searchTerm %}
                {{ ui.reset_button(path('app_auteur_index')) }}
            {% endif %}
        </div>
    </form>
{% endblock %}

{% block search_summary %}
    {{ ui.search_summary(searchTerm, searchType, auteurs|length) }}
{% endblock %}

{% block table_head %}
    <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prénom</th>
        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
    </tr>
{% endblock %}

{% block table_body %}
    {% for auteur in auteurs %}
        <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ auteur.id }}</td>
            <td class="px-6 py-4 whitespace-nowrap"><div class="text-sm font-medium text-gray-900">{{ auteur.nom }}</div></td>
            <td class="px-6 py-4 whitespace-nowrap"><div class="text-sm text-gray-900">{{ auteur.prenom }}</div></td>
            {{ ui.table_actions('app_auteur_show', 'app_auteur_edit', auteur.id, auteur.id) }}
        </tr>
    {% else %}
        <tr>
            <td colspan="4" class="px-6 py-12 text-center">
                <div class="text-gray-500">
                    {% if searchTerm %}
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                        <p class="mt-2 text-sm font-medium">Aucun résultat trouvé</p>
                        <p class="mt-1 text-xs">Essayez avec d'autres critères de recherche</p>
                        {{ ui.secondary_button('Voir tous les auteurs', path('app_auteur_index'), 'mt-4') }}
                    {% else %}
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                        <p class="mt-2 text-sm font-medium">Aucun auteur trouvé</p>
                        <p class="mt-1 text-xs">Commencez par créer un nouveau auteur</p>
                        {{ ui.primary_button('Créer un auteur', path('app_auteur_new'), null, 'mt-4') }}
                    {% endif %}
                </div>
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block footer_actions %}
    {{ ui.footer_actions(auteurs|length, path('app_auteur_new'), 'Créer un auteur', 'auteur') }}
{% endblock %}

