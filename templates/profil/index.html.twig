{% extends base_layout %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <div class="bg-white shadow rounded-lg p-6 max-w-3xl mx-auto">
        <h1 class="text-2xl font-bold text-gray-800 mb-4">Mon profil</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h2 class="text-lg font-semibold text-gray-700 mb-2">Informations personnelles</h2>
                <p class="text-gray-600"><span class="font-medium">Nom :</span> {{ user.nom ?? '-' }}</p>
                <p class="text-gray-600"><span class="font-medium">Prénom :</span> {{ user.prenom ?? '-' }}</p>
                <p class="text-gray-600"><span class="font-medium">Email :</span> {{ user.email }}</p>
            </div>

            <div>
                <h2 class="text-lg font-semibold text-gray-700 mb-2">Rôles</h2>
                <div class="flex flex-wrap gap-2">
                    {% for role in user.roles %}
                        {% set label = role %}
                        {% if role == 'ROLE_SUPER_ADMIN' %}
                            {% set label = 'Super administrateur' %}
                        {% elseif role == 'ROLE_ADMIN' %}
                            {% set label = 'Administrateur' %}
                        {% elseif role == 'ROLE_USER' %}
                            {% set label = 'Utilisateur' %}
                        {% endif %}

                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                            {{ label }}
                        </span>
                    {% else %}
                        <p class="text-gray-500 text-sm">Aucun rôle spécifique (ROLE_USER par défaut).</p>
                    {% endfor %}
                </div>
            </div>
        </div>

        {% if user.bibliotheque is defined and user.bibliotheque %}
            <div class="mt-6 border-t pt-4">
                <h2 class="text-lg font-semibold text-gray-700 mb-2">Ma bibliothèque</h2>
                <p class="text-gray-600"><span class="font-medium">Nom :</span> {{ user.bibliotheque.nom }}</p>
                <p class="text-gray-600"><span class="font-medium">Adresse :</span> {{ user.bibliotheque.adresse ?? '-' }}</p>
            </div>
        {% endif %}

        <div class="mt-6 flex justify-end">
            <a href="{{ path('logout') }}" class="inline-flex items-center px-4 py-2 border border-red-500 text-red-600 text-sm font-semibold rounded-lg hover:bg-red-50 transition">
                Se déconnecter
            </a>
        </div>
    </div>
{% endblock %}


