{% extends 'superadmin_base.html.twig' %}

{% block title %}{{ user.id ? 'Modifier' : 'Nouvel' }} Utilisateur{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">{{ user.id ? 'Modifier' : 'Nouvel' }} Utilisateur</h1>
    
    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}
    
    <div class="bg-white shadow rounded-lg p-6">
        {{ form_start(form) }}
        
        {% if not form.vars.valid %}
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
                <p class="font-semibold">Veuillez corriger les erreurs suivantes :</p>
                <ul class="list-disc list-inside mt-2">
                    {% for error in form.vars.errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        
        <div class="space-y-4">
            <div>
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                {{ form_errors(form.email) }}
            </div>
            
            <div>
                {{ form_label(form.password) }}
                {{ form_widget(form.password, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                {{ form_errors(form.password) }}
                {% if form.password.vars.help %}
                    <p class="mt-1 text-sm text-gray-500">{{ form.password.vars.help }}</p>
                {% endif %}
            </div>
            
            <div>
                {{ form_label(form.roles) }}
                {{ form_widget(form.roles, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                {{ form_errors(form.roles) }}
                {% if form.roles.vars.help %}
                    <p class="mt-1 text-sm text-gray-500">{{ form.roles.vars.help }}</p>
                {% endif %}
            </div>
            
            {% if form.bibliotheque is defined %}
            <div>
                {{ form_label(form.bibliotheque) }}
                {{ form_widget(form.bibliotheque, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                {{ form_errors(form.bibliotheque) }}
            </div>
            {% endif %}
        </div>
        
        <div class="flex justify-end space-x-4 mt-6">
            <a href="{{ path('superadmin_users') }}" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">Annuler</a>
            <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">Enregistrer</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

