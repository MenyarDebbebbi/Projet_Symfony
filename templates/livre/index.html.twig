{% extends '_layouts/index_layout.html.twig' %}
{% import '_components/ui_components.html.twig' as ui %}

{% block index_title %}Liste des Livres{% endblock %}
{% block page_heading %}Liste des Livres{% endblock %}
{% block page_subheading %}Gérez tous vos livres en un seul endroit{% endblock %}

{% block search_title %}Rechercher un livre{% endblock %}

{% block search_form %}
    <form method="get" action="{{ path('app_livre_index') }}" class="flex flex-col md:flex-row gap-4">
        <div class="flex-1">
            <label for="search" class="sr-only">Recherche</label>
            {{ ui.search_input('search', searchTerm, 'Rechercher par titre ou priorité...') }}
        </div>
        <div class="w-full md:w-48">
            <label for="type" class="sr-only">Type de recherche</label>
            {{ ui.search_select('type', {
                'all': 'Tous les champs',
                'titre': 'Titre uniquement',
                'priorite': 'Priorité uniquement'
            }, searchType) }}
        </div>
        <div class="flex gap-2">
            {{ ui.search_button() }}
            {% if searchTerm %}
                {{ ui.reset_button(path('app_livre_index')) }}
            {% endif %}
        </div>
    </form>
{% endblock %}

{% block search_summary %}
    {{ ui.search_summary(searchTerm, searchType, pagination.totalItemCount) }}
{% endblock %}

{% block table_head %}
    <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Titre</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ISBN</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantité</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priorité</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date de publication</th>
        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
    </tr>
{% endblock %}

{% block table_body %}
    {% for livre in livres %}
        <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ livre.id }}</td>
            <td class="px-6 py-4 whitespace-nowrap"><div class="text-sm font-medium text-gray-900">{{ livre.titre }}</div></td>
            <td class="px-6 py-4 whitespace-nowrap"><div class="text-sm text-gray-500">{{ livre.isbn ?? '-' }}</div></td>
            <td class="px-6 py-4 whitespace-nowrap"><div class="text-sm text-gray-900">{{ livre.qte }}</div></td>
            <td class="px-6 py-4 whitespace-nowrap">
                {{ ui.priority_badge(livre.priorite) }}
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ livre.datepub|date('d/m/Y') }}</td>
            {{ ui.table_actions('app_livre_show', 'app_livre_edit', livre.id, livre.id) }}
        </tr>
    {% else %}
        <tr>
            <td colspan="7" class="px-6 py-12 text-center">
                <div class="text-gray-500">
                    {% if searchTerm %}
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                        <p class="mt-2 text-sm font-medium">Aucun résultat trouvé</p>
                        <p class="mt-1 text-xs">Essayez avec d'autres critères de recherche</p>
                        {{ ui.secondary_button('Voir tous les livres', path('app_livre_index'), 'mt-4') }}
                    {% else %}
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                        <p class="mt-2 text-sm font-medium">Aucun livre trouvé</p>
                        <p class="mt-1 text-xs">Commencez par créer un nouveau livre</p>
                        {{ ui.primary_button('Créer un livre', path('app_livre_new'), null, 'mt-4') }}
                    {% endif %}
                </div>
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block footer_actions %}
    {{ ui.footer_actions(pagination.totalItemCount, path('app_livre_new'), 'Créer un livre', 'livre') }}
{% endblock %}

{% block pagination %}
    {% set route_params = {} %}
    {% if searchTerm %}
        {% set route_params = route_params|merge({'search': searchTerm}) %}
    {% endif %}
    {% if searchType and searchType != 'all' %}
        {% set route_params = route_params|merge({'type': searchType}) %}
    {% endif %}
    {{ ui.pagination(pagination, 'app_livre_index', route_params) }}
{% endblock %}

