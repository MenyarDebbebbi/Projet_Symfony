{% extends '_layouts/index_layout.html.twig' %}
{% import '_components/ui_components.html.twig' as ui %}

{% block index_title %}Liste des Éditeurs{% endblock %}
{% block page_heading %}Liste des Éditeurs{% endblock %}
{% block page_subheading %}Gérez tous vos éditeurs en un seul endroit{% endblock %}

{% block search_title %}Rechercher un éditeur{% endblock %}

{% block search_form %}
    <form method="get" action="{{ path('app_editeur_index') }}" class="flex flex-col md:flex-row gap-4">
        <div class="flex-1">
            <label for="search" class="sr-only">Recherche</label>
            {{ ui.search_input('search', searchTerm, 'Rechercher par nom, pays ou acteur...') }}
        </div>
        <div class="w-full md:w-48">
            <label for="type" class="sr-only">Type de recherche</label>
            {{ ui.search_select('type', {
                'all': 'Tous les champs',
                'nom': 'Nom uniquement',
                'pays': 'Pays uniquement'
            }, searchType) }}
        </div>
        <div class="flex gap-2">
            {{ ui.search_button() }}
            {% if searchTerm %}
                {{ ui.reset_button(path('app_editeur_index')) }}
            {% endif %}
        </div>
    </form>
{% endblock %}

{% block search_summary %}
    {{ ui.search_summary(searchTerm, searchType, pagination.totalItemCount) }}
{% endblock %}

{% block table_head %}
    <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pays</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Adresse</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Téléphone</th>
        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
    </tr>
{% endblock %}

{% block table_body %}
    {% for editeur in editeurs %}
        <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ editeur.id }}</td>
            <td class="px-6 py-4 whitespace-nowrap"><div class="text-sm font-medium text-gray-900">{{ editeur.nom }}</div></td>
            <td class="px-6 py-4 whitespace-nowrap"><div class="text-sm text-gray-900">{{ editeur.pays }}</div></td>
            <td class="px-6 py-4 whitespace-nowrap"><div class="text-sm text-gray-900">{{ editeur.adresse }}</div></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ editeur.telephone }}</td>
            {{ ui.table_actions('app_editeur_show', 'app_editeur_edit', editeur.id, editeur.id) }}
        </tr>
    {% else %}
        <tr>
            <td colspan="6" class="px-6 py-12 text-center">
                <div class="text-gray-500">
                    {% if searchTerm %}
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                        <p class="mt-2 text-sm font-medium">Aucun résultat trouvé</p>
                        <p class="mt-1 text-xs">Essayez avec d'autres critères de recherche</p>
                        {{ ui.secondary_button('Voir tous les éditeurs', path('app_editeur_index'), 'mt-4') }}
                    {% else %}
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                        <p class="mt-2 text-sm font-medium">Aucun éditeur trouvé</p>
                        <p class="mt-1 text-xs">Commencez par créer un nouvel éditeur</p>
                        {{ ui.primary_button('Créer un éditeur', path('app_editeur_new'), null, 'mt-4') }}
                    {% endif %}
                </div>
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block footer_actions %}
    {{ ui.footer_actions(pagination.totalItemCount, path('app_editeur_new'), 'Créer un éditeur', 'éditeur') }}
{% endblock %}

{% block pagination %}
    {% set route_params = {} %}
    {% if searchTerm %}
        {% set route_params = route_params|merge({'search': searchTerm}) %}
    {% endif %}
    {% if searchType and searchType != 'all' %}
        {% set route_params = route_params|merge({'type': searchType}) %}
    {% endif %}
    {{ ui.pagination(pagination, 'app_editeur_index', route_params) }}
{% endblock %}

