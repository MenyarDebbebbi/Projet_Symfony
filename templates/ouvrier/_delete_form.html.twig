<form method="post" action="{{ path('app_ouvrier_delete', {'id': ouvrier.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet ouvrier ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ouvrier.id) }}">
    <button type="submit" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-md transition focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
        Supprimer l'ouvrier
    </button>
</form>
