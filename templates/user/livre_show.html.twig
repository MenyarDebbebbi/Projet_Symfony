{% extends '_layouts/user_base.html.twig' %}

{% block title %}{{ livre.titre }}{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 p-6">
            <div class="aspect-w-3 aspect-h-4 bg-gray-200 rounded-lg overflow-hidden">
                {% if livre.imageName %}
                    <img src="{{ vich_uploader_asset(livre, 'imageFile') }}" alt="{{ livre.titre }}" class="w-full h-full object-cover">
                {% else %}
                    <div class="w-full h-96 bg-gray-300 flex items-center justify-center">
                        <svg class="w-32 h-32 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        </svg>
                    </div>
                {% endif %}
            </div>
            <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-6">{{ livre.titre }}</h1>
                
                <dl class="grid grid-cols-1 gap-6 mb-6">
            {% if livre.isbn %}
            <div>
                <dt class="text-sm font-medium text-gray-500">ISBN</dt>
                <dd class="mt-1 text-sm text-gray-900">{{ livre.isbn }}</dd>
            </div>
            {% endif %}
            {% if livre.auteur %}
            <div>
                <dt class="text-sm font-medium text-gray-500">Auteur</dt>
                <dd class="mt-1 text-sm text-gray-900">{{ livre.auteur.nom }} {{ livre.auteur.prenom }}</dd>
            </div>
            {% endif %}
            {% if livre.categorie %}
            <div>
                <dt class="text-sm font-medium text-gray-500">Catégorie</dt>
                <dd class="mt-1 text-sm text-gray-900">{{ livre.categorie.designation }}</dd>
            </div>
            {% endif %}
            {% if livre.editeur %}
            <div>
                <dt class="text-sm font-medium text-gray-500">Éditeur</dt>
                <dd class="mt-1 text-sm text-gray-900">{{ livre.editeur.nom }}</dd>
            </div>
            {% endif %}
            {% if livre.bibliotheque %}
            <div>
                <dt class="text-sm font-medium text-gray-500">Bibliothèque</dt>
                <dd class="mt-1 text-sm text-gray-900">{{ livre.bibliotheque.nom }}</dd>
            </div>
            {% endif %}
            <div>
                <dt class="text-sm font-medium text-gray-500">Date de publication</dt>
                <dd class="mt-1 text-sm text-gray-900">{{ livre.datepub|date('d/m/Y') }}</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Stock disponible</dt>
                <dd class="mt-1 text-sm text-gray-900">{{ livre.qte }} exemplaire(s)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Priorité</dt>
                <dd class="mt-1">
                    <span class="px-2 py-1 text-xs rounded-full {% if livre.priorite == 'Haute' %}bg-red-100 text-red-800{% elseif livre.priorite == 'Moyenne' %}bg-yellow-100 text-yellow-800{% else %}bg-green-100 text-green-800{% endif %}">
                        {{ livre.priorite }}
                    </span>
                </dd>
            </div>
        </dl>
            </div>
        </div>
        
        <div class="px-6 pb-6 flex justify-end space-x-4">
            <a href="{{ path('user_livres') }}" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">Retour</a>
            {% if livre.qte > 0 %}
                <a href="{{ path('user_commander', {id: livre.id}) }}" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
                    Commander
                </a>
            {% else %}
                <span class="px-4 py-2 bg-gray-300 text-gray-500 rounded-lg cursor-not-allowed">Rupture de stock</span>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

