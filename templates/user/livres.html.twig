{% extends '_layouts/user_base.html.twig' %}

{% block title %}Catalogue des Livres{% endblock %}

{% block body %}
<div class="space-y-6">
    <h1 class="text-3xl font-bold text-gray-900">Catalogue des Livres</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for livre in livres %}
        <a href="{{ path('user_livre_show', {id: livre.id}) }}" class="bg-white shadow rounded-lg overflow-hidden hover:shadow-lg transition cursor-pointer block">
            <div class="aspect-w-16 aspect-h-22 bg-gray-200 overflow-hidden">
                {% if livre.imageName %}
                    <img src="{{ vich_uploader_asset(livre, 'imageFile') }}" alt="{{ livre.titre }}" class="w-full h-64 object-cover">
                {% else %}
                    <div class="w-full h-64 bg-gray-300 flex items-center justify-center">
                        <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        </svg>
                    </div>
                {% endif %}
            </div>
            <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-2">{{ livre.titre }}</h3>
                <div class="space-y-2 text-sm text-gray-600 mb-4">
                    {% if livre.auteur %}
                        <p><span class="font-medium">Auteur:</span> {{ livre.auteur.nom }} {{ livre.auteur.prenom }}</p>
                    {% endif %}
                    {% if livre.categorie %}
                        <p><span class="font-medium">Catégorie:</span> {{ livre.categorie.designation }}</p>
                    {% endif %}
                    {% if livre.editeur %}
                        <p><span class="font-medium">Éditeur:</span> {{ livre.editeur.nom }}</p>
                    {% endif %}
                    <p><span class="font-medium">Stock:</span> {{ livre.qte }} exemplaire(s)</p>
                </div>
                <div class="flex justify-between items-center mt-4">
                    <span class="text-indigo-600 hover:text-indigo-800">Voir détails →</span>
                    {% if livre.qte > 0 %}
                        <span class="bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm">
                            Disponible
                        </span>
                    {% else %}
                        <span class="text-gray-400 text-sm">Rupture de stock</span>
                    {% endif %}
                </div>
            </div>
        </a>
        {% endfor %}
    </div>
</div>
{% endblock %}

