{% extends '_layouts/index_layout.html.twig' %}
{% import '_components/ui_components.html.twig' as ui %}

{% block index_title %}Liste des Catégories{% endblock %}
{% block page_heading %}Liste des Catégories{% endblock %}
{% block page_subheading %}Gérez toutes vos catégories en un seul endroit{% endblock %}

{% block search_title %}Rechercher une catégorie{% endblock %}

{% block search_form %}
    <form method="get" action="{{ path('app_categorie_index') }}" class="flex flex-col md:flex-row gap-4">
        <div class="flex-1">
            <label for="search" class="sr-only">Recherche</label>
            {{ ui.search_input('search', searchTerm, 'Rechercher par désignation...') }}
        </div>
        
        <div class="flex gap-2">
            {{ ui.search_button() }}
            
            {% if searchTerm %}
                {{ ui.reset_button(path('app_categorie_index')) }}
            {% endif %}
        </div>
    </form>
{% endblock %}

{% block search_summary %}
    {{ ui.search_summary(searchTerm, null, pagination.totalItemCount) }}
{% endblock %}

{% block table_head %}
    <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Désignation</th>
        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
    </tr>
{% endblock %}

{% block table_body %}
    {% for categorie in categories %}
        <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ categorie.id }}</td>
            <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">{{ categorie.designation }}</div>
            </td>
            {{ ui.table_actions('app_categorie_show', 'app_categorie_edit', categorie.id, categorie.id) }}
        </tr>
    {% else %}
        <tr>
            <td colspan="3" class="px-6 py-12 text-center">
                <div class="text-gray-500">
                    {% if searchTerm %}
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                        <p class="mt-2 text-sm font-medium">Aucun résultat trouvé</p>
                        <p class="mt-1 text-xs">Essayez avec d'autres critères de recherche</p>
                        {{ ui.secondary_button('Voir toutes les catégories', path('app_categorie_index'), 'mt-4') }}
                    {% else %}
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                        <p class="mt-2 text-sm font-medium">Aucune catégorie trouvée</p>
                        <p class="mt-1 text-xs">Commencez par créer une nouvelle catégorie</p>
                        {{ ui.primary_button('Créer une catégorie', path('app_categorie_new'), null, 'mt-4') }}
                    {% endif %}
                </div>
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block footer_actions %}
    {{ ui.footer_actions(pagination.totalItemCount, path('app_categorie_new'), 'Créer une catégorie', 'catégorie') }}
{% endblock %}

{% block pagination %}
    {% set route_params = {} %}
    {% if searchTerm %}
        {% set route_params = route_params|merge({'search': searchTerm}) %}
    {% endif %}
    {% if searchType and searchType != 'all' %}
        {% set route_params = route_params|merge({'type': searchType}) %}
    {% endif %}
    {{ ui.pagination(pagination, 'app_categorie_index', route_params) }}
{% endblock %}

